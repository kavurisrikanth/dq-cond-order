(DataQuery SortedCustomersUsingInput2 {
    inputs [
        (sortBy {
            type ({
                optionSet #CustomerSortOptions
            })
        })
    ]
    query `
        Customer.all.orderBy((c) => switch (inputs.sortBy) {
            case AGE: c.isUnderAge ? c.guardian.ageInYears : c.ageInYears
            case NAME: c.name
            default: c.ageInYears
        })
    `
})