(DataQuery SortedCustomersUsingInput2 {
    inputs [
        (sortBy {
            type ({
                optionSet #CustomerSortOptions
            })
        })
    ]
    query `
        Customer.all.orderBy((c) => inputs.sortBy == AGE ? (c.isUnderAge ? c.ageInYears : c.guardian.ageInYears) : (inputs.sortBy == NAME ? c.name : c.ageInYears))
    `
})